<Md5Controller>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20, 10

        BoxLayout:
            # Box that contains setup for calculation
            orientation: "vertical"
            size_hint_y: 1.6
            padding: 20, 0
            spacing: 30
            Label:
                text: "Enter the text"
                font_size: 30
                size_hint_y: 2
            BoxLayout:
                size_hint_y: 8
                TextInput:
                    id: input_text
                    text: root.normal_text
                    foreground_color: "#eeeeee"
                    background_color: "#444444"
                    background_normal: "white"
                Button:
                    text: "Insert from\na file"
                    on_release: root.open_file()
                    size_hint_x: 0.2
                    font_size: 20
            BoxLayout:
                size_hint_y: 2
                Button:
                    id: button_generate_md5
                    text: "Generate hash from text"
                    on_release: root.generate_hash()
                Button:
                    id: button_write_to_file_md5
                    text: "Save generated hash to file"
                    on_release: root.save_to_file()
                Button:
                    id: button_check_file
                    text: "Check file by its hash from text"
                    on_release: root.check_file()
        Widget:
            size_hint_y: 0.1
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Result:"
                    font_size: dp(20)
                Label:
                    id: result_data
                    text: root.hashed_text
                    font_size: dp(30)
                Widget:
                    size_hint_y: 3
