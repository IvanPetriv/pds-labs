<RsaController>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20, 10

        BoxLayout:
            # Box that contains setup for calculation
            orientation: "vertical"
            size_hint_y: 1.6
            padding: 20, 0
            spacing: 30
            Label:
                text: "Enter parameters"
                font_size: 30
                size_hint_y: 2
            BoxLayout:
                size_hint_y: 3
                TextInput:
                    id: input_text
                    hint_text: "Text"
                    foreground_color: "#eeeeee"
                    background_color: "#444444"
                    background_normal: "white"
                Button:
                    text: "Select a file"
                    on_release: root.open_text_file()
                    size_hint_x: 0.2
            BoxLayout:
                size_hint_y: 4
                orientation: "vertical"
                Button:
                    id: button_generate_key_pair
                    text: "Generate public and private keys"
                    on_release: root.generate_key_pair()
                BoxLayout:
                    Button:
                        id: button_encrypt
                        text: "Encrypt text"
                        on_release: root.encrypt()
                    Button:
                        id: button_decrypt
                        text: "Decrypt text"
                        on_release: root.decrypt()
        BoxLayout:
            orientation: "vertical"
            Label:
                id: result_data
                text: "Hi"
                font_size: dp(30)
